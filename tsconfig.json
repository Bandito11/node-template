{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2020",
    "skipLibCheck": true,
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitAny": false
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}